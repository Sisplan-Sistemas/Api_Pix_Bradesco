{
  "transform": {
    ".(ts)": "ts-jest"
  },
  "moduleNameMapper": {
    "^~(.*)$": "<rootDir>/src/$1",
    "^helpers(.*)$": "<rootDir>/__tests__/helpers/$1",
    "^~/common/logger$": "<rootDir>/src/__mocks__/logger.ts"
  },
  "modulePathIgnorePatterns": [
    "<rootDir>/__tests__/helpers"
  ],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/index.ts",
    "!src/server.ts",
    "!src/**/@types/*.ts",
    "!src/config/**/*.ts",
    "!src/common/**/*.ts"
  ]
}